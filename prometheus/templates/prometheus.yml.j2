global:
  scrape_interval:     15s
  evaluation_interval: 30s

rule_files:
  - /etc/prometheus/rules.d/*.rule


scrape_configs:
  - job_name: node_exporter
    file_sd_configs:
      - files:
        - /etc/prometheus/targets.d/node_exporter/*.json
    relabel_configs:
      - source_labels: ['__address__']
        regex: '^:\d+'
        action: drop

  - job_name: prometheus
    file_sd_configs:
      - files:
        - /etc/prometheus/targets.d/prometheus/*.json
    relabel_configs:
      - source_labels: ['__address__']
        regex: '^:\d+'
        action: drop

