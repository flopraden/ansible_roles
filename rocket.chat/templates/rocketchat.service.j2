[Unit]
Description=rocketchat server for %i
Requires=docker.service
After=docker.service

[Service]
Environment=-/etc/rocketchat/environments/%i.env
Restart=always
User=rocketchat
ExecStartPre=-/usr/bin/docker kill rocketchat.%i
ExecStartPre=-/usr/bin/docker rm rocketchat.%i
ExecStartPre=-/usr/bin/docker pull {{ rocketchat_docker_image }}

ExecStart=/usr/bin/docker run --rm --name rocketchat_{{ rocketchat_munged_url }} \
    --volume {{ rocketchat_data_root }}/{{ rocketchat_munged_url }}:/app/uploads:Z \
    --env MONGO_OPLOG_URL=$MONGO_OPLOG_URL \
    --env MONGO_URL=$MONGO_URL \
    --env ROOT_URL=$ROOT_URL \
    --net {{ rocketchat_docker_network }} \
    --expose 3000 {% if rocketchat_docker_publish | default(false,true) %}--publish {{ rocketchat_docker_publish }} {%- endif %} \
    {{ rocketchat_docker_image }}

ExecStop=-/usr/bin/docker kill rocketchat.%i
ExecStop=-/usr/bin/docker rm rocketchat.%i
